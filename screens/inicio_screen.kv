<InicioScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 80
            pos_hint: {'x': 0.05, 'top': 0.99}
            spacing: 0
            
            MDLabel:
                text: "Mis Hábitos"
                font_style: "H5"
                bold: True
                halign: "left"
                size_hint_y: None
                height: 40
                theme_text_color: "Custom"
                text_color:  0, 0.9686, 1, 1 
                padding_x: 0
            
            MDLabel:
                id: bienvenido
                text: "Usuario"
                font_style: "Subtitle1"
                halign: "left"
                size_hint_y: None
                height: 30
                theme_text_color: "Custom"
                text_color: 0.6, 0.6, 0.6, 1
                padding_x: 0
        
        MDRaisedButton:
            text: "Salir"
            size_hint: None, None
            size: 100, 40
            pos_hint: {'right': 0.95, 'top': 0.96}
            md_bg_color: 0.6, 0.6, 0.6, 1 
            text_color: 1, 1, 1, 1 
            on_release: root.logout()
        
        # Contenedor de hábitos (centrado, debajo del título)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 15
            
            # Lista de hábitos con scroll
            ScrollView:
                MDList:
                    id: habits_list
                    padding: 0
                    spacing: 10
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
        
        # Botón flotante para agregar hábitos (abajo a la derecha)
        MDFloatingActionButton:
            icon: "plus"
            md_bg_color: 0, 0.9686, 1, 1 
            pos_hint: {"right": 0.95, "y": 0.05}
            on_release: root.add_new_habit()